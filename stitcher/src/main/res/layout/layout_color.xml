<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorPrimary"
    android:layout_marginBottom="5dp"
    android:id="@+id/layout_color"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/llnormal"
        android:layout_margin="5dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/myImageViewNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/folder_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Normal"
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:id="@+id/normal"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="5dp"
        android:id="@+id/llenhanced"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/myImageViewEnhance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/auto_fix" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:text="Enhance"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:id="@+id/enhance"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="5dp"
        android:id="@+id/llgray"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/myImageViewGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/brush" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Gray"
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:id="@+id/gray"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/lllighten"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/myImageViewLighten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/lightbulb_outline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Lighten"
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:id="@+id/light"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="5dp"
        android:id="@+id/llbw"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/myImageViewBW"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/invert_colors" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="B And W"
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:id="@+id/bw"/>
    </LinearLayout>



</LinearLayout>


